echo "Enter the Basic Salary"
read Basicsalary
  TA=$((Basicsalary/100*15))
    echo "TA is : $TA"
  DA=$((Basicsalary/100*2))
    echo "DA is : $DA"
  HRA=$((Basicsalary/100*10))
    echo "HRA is : $HRA"
  IT=$((Basicsalary/100*5))
    echo "Income Tax is : $IT"
  PF=$((Basicsalary/100*10))
    echo "PF is : $PF"
  NS=$((Basicsalary + TA + DA + HRA - IT - PF))
    echo "Net Salary is : $NS"
